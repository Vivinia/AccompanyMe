<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical"
    tools:context=".RegisterActivity" >


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="10dp"
        tools:context=".RegisterActivity" >

        <EditText
            android:id="@+id/etRegisterEmail"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/btn_long_text_input"
            android:drawableLeft="@drawable/ic_menu_gallery"
            android:drawablePadding="10dp"
            android:hint="您的邮箱" >

            <requestFocus />
        </EditText>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="6dp"
            android:orientation="horizontal" >

            <EditText
                android:id="@+id/etRegisterNumber"
                android:layout_width="0dp"
                android:layout_height="45dp"
                android:layout_marginRight="5dp"
                android:layout_weight="3"
                android:background="@drawable/btn_long_text_input"
                android:drawableLeft="@drawable/ic_menu_gallery"
                android:drawablePadding="10dp"
                android:ems="10"
                android:hint="验证码"
                android:inputType="phone" />

            <Button
                android:id="@+id/btGetNumber"
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:layout_weight="2"
                android:background="@drawable/btn_long_white"
                android:text="获取验证码"
                android:textColor="@color/colorAccent"
                android:onClick="btRegisterClick"
                android:textSize="16sp" />
        </LinearLayout>



        <EditText
            android:id="@+id/etRegisterPass"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_marginTop="6dp"
            android:background="@drawable/btn_long_text_input"
            android:drawableLeft="@drawable/ic_menu_gallery"
            android:drawablePadding="10dp"
            android:ems="10"
            android:hint="密码"
            android:inputType="textPassword" />
        <EditText
            android:id="@+id/etRegisterUserAreBaby"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_marginTop="6dp"
            android:background="@drawable/btn_long_text_input"
            android:drawableLeft="@drawable/ic_menu_gallery"
            android:drawablePadding="10dp"
            android:ems="10"
            android:hint="您是宝宝的什么人" />
        <EditText
            android:id="@+id/etRegisterBabyName"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_marginTop="6dp"
            android:background="@drawable/btn_long_text_input"
            android:drawableLeft="@drawable/ic_menu_gallery"
            android:drawablePadding="10dp"
            android:ems="10"
            android:hint="宝宝名字" />
        <EditText
            android:id="@+id/etRegisterBabySex"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_marginTop="6dp"
            android:background="@drawable/btn_long_text_input"
            android:drawableLeft="@drawable/ic_menu_gallery"
            android:drawablePadding="10dp"
            android:ems="10"
            android:hint="宝宝性别" />
        <EditText
            android:id="@+id/etRegisterBabyBirthday"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_marginTop="6dp"
            android:background="@drawable/btn_long_text_input"
            android:drawableLeft="@drawable/ic_menu_gallery"
            android:drawablePadding="10dp"
            android:ems="10"
            android:hint="宝宝生日如2017-01-01" />

        <Button
            android:id="@+id/btRegister"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_marginTop="12dp"
            android:background="@drawable/xml_btn_color_accent"
            android:text="注册"
            android:onClick="btRegisterClick"
            android:textSize="18sp" android:textColor="#ffffff"/>
        <Button
            android:id="@+id/btToLoign"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_below="@+id/btRegister"
            android:layout_marginTop="6dp"
            android:background="@drawable/btn_long_white"
            android:text="已有账号"
            android:textColor="@color/colorAccent"
            android:onClick="btRegisterClick"
            android:textSize="18sp" />

    </LinearLayout>

</RelativeLayout>